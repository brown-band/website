---
layout: web.njk
---
{% if toc == null %}{% set toc = content | auto_toc %}{% endif %}

<article>

{% if toc != false %}{% include "toc-button.html" %}{% endif %}

{% if title and show_header != false %}
<h1>{{title}}</h1>
{% endif %}

{% if toc != false %}
  {% if toc.length > 0 %}
    {% include "toc.njk" %}
  {% endif %}
{% endif %}

{% if summary %}
<blockquote>
  <p><em>{{summary | safe}}</em></p>
</blockquote>
{% endif %}

{{content | safe}}
</article>
