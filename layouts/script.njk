---
layout: base
---

{% macro score(score) %}{% if score %} ({{score}}){% endif %}{% endmacro %}

<article>
  <header>
    {% if teams.home %}
      <h1>
        {{teams.away.name}}{{score(teams.away.score)}}
        at {{teams.home.name}}{{score(teams.home.score)}}
      </h1>
    {% elif scriptType == "adoch" %}
      <h1>A Day on College Hill {{date.getFullYear()}}</h1>
    {% elif scriptType == "other" %}
      <h1>{{title}}</h1>
    {% else %}
      <# when we don't know home/away or scores #>
      <h1>Brown <em>vs</em> {{opponent}}</h1>
    {% endif %}
    <h2>{{date | script_date }}</h2>
    <h3>{{script.writers | listify}}
  </header>
  {{content | safe}}
</article>
