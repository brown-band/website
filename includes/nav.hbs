<link rel="stylesheet" href="/assets/css/navbar-colors.css" />
<link rel="stylesheet" href="/assets/css/nav.css" />

{{#*inline "dropdownActive"}}
  {{~#each this as |link|~}}
    {{lookup (find_page link) "active"}}
  {{~/each~}}
{{/inline}}

<nav class="navbar navbar-expand-md navbar-brown">
  <div class="container-lg">
    <div class="col-lg-1 col-xl-2"></div>
    <div
      class="col-lg-10 col-xl-9"
      style="
        display: flex;
        flex-wrap: inherit;
        align-items: center;
        justify-content: space-between;
      "
    >
      <a
        class="navbar-brand me-lg-5"
        style="display: flex; align-items: center"
        href="/"
      >
        <img class="m-1 me-2" src="/assets/elrod.png" height="50" alt="" />
        <div style="display: inline-flex; flex-direction: column">
          <span style="font-weight: 500">{{site.title}}</span>
          <em class="header-quote">{{quote.random}}</em>
        </div>
      </a>
      <ul class="navbar-nav bg-brown3">
        {{#each nav}}
          {{! partial in attribute is broken }}
          {{! prettier-ignore }}
          <li class="nav-item dropdown mx-1">
            <button
              class="nav-link dropdown-toggle bg-transparent border-0 {{> dropdownActive content}}"
              style="outline: 0"
              id="dropdownMenuLink-{{@index}}"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              {{~title~}}
            </button>

            <ul
              class="dropdown-menu dropdown-menu-brown rounded-3 lg-shadow-brown"
              aria-labelledby="dropdownMenuLink-{{@index}}"
            >
              {{#each this.content as |link|}}
                {{#if link.heading}}
                  <li><hr class="dropdown-divider" /></li>
                  <li><h6 class="dropdown-header">{{link.heading}}</h6></li>
                {{else if link.disabled}}
                  <li class="dropdown-item disabled">{{link.disabled}}</li>
                {{else}}
                  {{#with (find_page link)}}
                    <li>
                      <a class="dropdown-item {{active}}" href="{{href}}">
                        {{title}}
                      </a>
                    </li>
                  {{/with}}
                {{/if}}
              {{/each}}
            </ul>
          </li>
        {{/each}}
        <li class="nav-item mx-1">
          <a
            href="/contact/"
            class="nav-link {{lookup (find_page '/contact/') 'active'}}"
          >
            Contact
          </a>
        </li>
      </ul>
    </div>
    <div class="col-lg-1"></div>
  </div>
</nav>
