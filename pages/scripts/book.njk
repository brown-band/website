---
layout: base.njk
# This page is only enabled when generating script books
permalink: "/"
---

<link rel="stylesheet" href="/assets/css/book.css" />
<link rel="stylesheet" href="/assets/css/script.css" />
<link rel="stylesheet" href="/assets/css/pagedjs-interface.css" />
<script src="/assets/paged.polyfill.js"></script>

<header>
  <h1 class="title" style="border-width: 0.7mm; font-size: 1.85em;">
    The Brown University Band<br />
    Football and Hockey Show Scripts<br />
    {{book.semesters[0].title}}â€“{{(book.semesters|last).title}}
  </h1>
</header>

<nav class="book-toc">
<h2 style="margin-top: 0; margin-bottom: 0.5in">Table of Contents</h2>
<ol>
{% for semester in book.semesters %}
  <li><a href="#{{semester.collection}}" class="fw-bold">{{semester.title}}</a><ol>
  {% for script in collections[semester.collection] %}
    <li><a href="#{{semester.collection}}_{{script.fileSlug}}">{{script.data.title}}</a></li>
  {% endfor %}
  </ol></li>
{% endfor %}
</ol></nav>

{% for semester in book.semesters %}
<section>
  <header>
    <h1 class="title text-decoration-underline" id="{{semester.collection}}">{{semester.title}}</h1>
    {% set writers = scripts[0].data.writers %}
    {% if writers %}
      <p class="h5 fst-italic fw-normal">Scriptwriter{% if writers.length != 1 %}s{% endif %}: {{writers | listify}}</p>
    {% endif %}
  </header>
  {% set scripts = collections[semester.collection] %}
  {% set id_prefix = semester.collection + '_' %}
  {% for script in scripts %}
    {% include 'script.njk' %}
  {% endfor %}
</section>
{% endfor %}
